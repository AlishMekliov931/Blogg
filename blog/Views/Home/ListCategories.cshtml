@model List<blog.Models.Category>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="row">
        <div style="text-align: center; color: #fabf00" ><h1>Categories</h1></div>
        <hr />
        @foreach (var category in Model)
        {
            <div class="col-sm-6 text-center text-uppercase">
                <p>
                    <h2>
                            @*<img src="~/Images/@(category.Name.ToLower()).png" alt="wait" width="75" />*@

                        @if (category.image != null)
                        {
                            var base64 = Convert.ToBase64String(category.image);
                            var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                            <img src="@imgsrc" alt="wait" width="75" />
                        }
                        else
                        {
                            <img src="~/Images/NoImage.jpg" alt="wait" width="75" />
                        }
                            @Html.ActionLink(string.Format($"{category.Name} ({category.Articles.Count})"),
                        "ListArticles", "Home", new { @categoryId = category.Id }, null)
                </h2>
            </p>
        </div>
        }
    </div>
</div>
<hr />
