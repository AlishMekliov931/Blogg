@model blog.Models.Comment
@{
    ViewBag.Title = "Comment";
}

<div class="container">
    <div>
        <h4>Post Comment</h4>
        @using (Html.BeginForm("Create", "Comment", new { id = Model.ArticleId } ,FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            
            <div class="form-group">
               
                <div class="pull-left">
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @rows = "5" })
                </div>
            </div>

            <div class="form-group">
                <div class="pull-left">
                    @*@Html.ActionLink("Cancel", "Index", "Article", null, new { @class = "btn btn-xs btn-default" })*@
                    <input type="submit" value="Post" class="btn btn-xs btn-success" />
                </div>
            </div>
        }
    </div>
</div>
